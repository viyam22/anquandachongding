  <image class="img-gift" src="../../images/img-gift.png"></image>

  <view class="info">
    <image class="txt-name txt" src="../../images/txt-name.png"></image>
    <input class="input-box" bindinput="bindNameInput" />

    <image class="txt-phone txt" src="../../images/txt-phone.png"></image>
